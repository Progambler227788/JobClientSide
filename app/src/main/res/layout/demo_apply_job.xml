<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/purple_500"
    android:layout_height="match_parent">

<ScrollView

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:id="@+id/under1"
            android:layout_height="match_parent">


            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp"
                android:background="@drawable/bg_theme"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/job_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="60sp"
                    android:gravity="center"
                    android:text="Ui Designer"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/job_company"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10sp"
                    android:gravity="center"
                    android:text="Company name"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/iconsHolder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10sp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/locationICon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:backgroundTint="#FFEB3B"
                        android:src="@drawable/ic_location"
                        app:layout_constraintTop_toTopOf="@id/linearLayout2" />


                    <TextView
                        android:id="@+id/locationCompany"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="SanFrasciso"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="@+id/job_icon"
                        app:layout_constraintStart_toStartOf="@+id/job_icon"
                        app:layout_constraintTop_toBottomOf="@+id/job_icon" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/insideIconHolder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="32sp"
                    android:layout_marginEnd="16dp"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="@+id/iconsHolder"
                    app:layout_constraintStart_toStartOf="@+id/iconsHolder"
                    app:layout_constraintTop_toBottomOf="@+id/iconsHolder">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"

                        >

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8sp"
                            android:layout_weight="0.5"
                            android:background="@drawable/bg_theme_placeholder">


                            <ImageView
                                android:id="@+id/salaryView"
                                android:layout_width="50sp"
                                android:layout_height="50sp"
                                android:layout_margin="8dp"
                                android:backgroundTint="#FFEB3B"
                                android:padding="8dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:srcCompat="@drawable/ic_profile" />

                            <TextView
                                android:id="@+id/salaryTV"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:text="Salary(Monthly)"
                                android:textColor="@color/black"
                                app:layout_constraintStart_toEndOf="@+id/salaryView"
                                app:layout_constraintTop_toTopOf="@+id/salaryView" />

                            <TextView
                                android:id="@+id/salaryRange"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="$50K-100K"
                                app:layout_constraintBottom_toBottomOf="@+id/salaryView"
                                app:layout_constraintStart_toStartOf="@+id/salaryTV" />
                        </androidx.constraintlayout.widget.ConstraintLayout>


                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:background="@drawable/bg_theme_placeholder">


                            <ImageView
                                android:id="@+id/jobTypeView"
                                android:layout_width="50sp"
                                android:layout_height="50sp"
                                android:layout_margin="8dp"
                                android:backgroundTint="#FFEB3B"
                                android:padding="8dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:srcCompat="@drawable/ic_profile" />

                            <TextView
                                android:id="@+id/jobTypeText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:text="Job Type"
                                android:textColor="@color/black"
                                app:layout_constraintStart_toEndOf="@+id/jobTypeView"
                                app:layout_constraintTop_toTopOf="@+id/jobTypeView" />

                            <TextView
                                android:id="@+id/jobType"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Full Time"
                                app:layout_constraintBottom_toBottomOf="@+id/jobTypeView"
                                app:layout_constraintStart_toStartOf="@+id/jobTypeText" />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20sp"
                        android:orientation="horizontal">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:layout_weight="0.5"
                            android:background="@drawable/bg_theme_placeholder">


                            <ImageView
                                android:id="@+id/workingModelImage"
                                android:layout_width="50sp"
                                android:layout_height="50sp"
                                android:layout_margin="8dp"
                                android:backgroundTint="#FFEB3B"
                                android:padding="8dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:srcCompat="@drawable/ic_profile" />

                            <TextView
                                android:id="@+id/workingModelTV"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:text="Working Model"
                                android:textColor="@color/black"
                                app:layout_constraintStart_toEndOf="@+id/workingModelImage"
                                app:layout_constraintTop_toTopOf="@+id/workingModelImage" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Remote"
                                app:layout_constraintBottom_toBottomOf="@+id/workingModelImage"
                                app:layout_constraintStart_toStartOf="@+id/workingModelTV" />
                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:background="@drawable/bg_theme_placeholder">


                            <ImageView
                                android:id="@+id/levelImage"
                                android:layout_width="50sp"
                                android:layout_height="50sp"
                                android:layout_margin="8dp"
                                android:padding="8dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:srcCompat="@drawable/ic_profile"
                                android:backgroundTint="#FFEB3B" />

                            <TextView
                                android:id="@+id/levelTV"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:text="Level"
                                android:textColor="@color/black"
                                app:layout_constraintStart_toEndOf="@+id/levelImage"
                                app:layout_constraintTop_toTopOf="@+id/levelImage" />

                            <TextView
                                android:id="@+id/jobLevel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Intern"
                                app:layout_constraintBottom_toBottomOf="@+id/levelImage"
                                app:layout_constraintStart_toStartOf="@+id/levelTV" />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <com.google.android.material.appbar.AppBarLayout
                        android:id="@+id/toolBarLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.google.android.material.tabs.TabLayout
                            android:id="@+id/tabLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:tabBackground="@color/white"
                            app:tabGravity="fill"
                            app:tabIndicatorColor="@color/purple_500"
                            app:tabIndicatorHeight="3dp"
                            app:tabMaxWidth="0dp"
                            app:tabMode="fixed"
                            app:tabSelectedTextColor="@color/purple_500"
                            app:tabTextAppearance="@style/tabText"
                            app:tabTextColor="@color/black" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#d8d8d8" />
                    </com.google.android.material.appbar.AppBarLayout>

                    <androidx.viewpager.widget.ViewPager
                        android:id="@+id/viewPager"
                        android:layout_width="match_parent"
                        android:layout_height="280dp"
                        android:background="@color/white" />


                </LinearLayout>


                <com.google.android.material.button.MaterialButton
                    android:id="@+id/apply"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_margin="16dp"
                    android:backgroundTint="@color/purple_500"
                    android:text="Apply for Job"
                    android:textAllCaps="true"
                    android:textColor="@android:color/white"
                    app:cornerRadius="16dp" />
            </LinearLayout>


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/job_icon"
        android:layout_width="96dp"
        android:layout_height="96dp"
        app:layout_constraintBottom_toTopOf="@id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/linearLayout2"
        app:civ_border_width="2dp"
        app:civ_border_color="@color/black"
        android:src="@drawable/cartoon_happy_eyes" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
